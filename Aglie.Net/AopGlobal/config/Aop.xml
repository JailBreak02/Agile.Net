      <object type="AopGlobal.Aspects.AroundAdvice, AopGlobal" />
    </property>
    <property name="Attribute"
              value="AopGlobal.Attributes.AopAttribute, AopGlobal" />
  </object>-->

  <!-- 匹配 Spring 表达式 -->
